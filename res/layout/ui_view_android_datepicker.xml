<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RadioGroup
        android:id="@+id/rg_opt_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RadioButton
            android:id="@+id/rb_opt_calendar"
            android:layout_width="wrap_content"
            android:layout_height="40dip"
            android:text="CalendarView" />

        <RadioButton
            android:id="@+id/rb_opt_spinners"
            android:layout_width="wrap_content"
            android:layout_height="40dip"
            android:text="Spinners" />

        <RadioButton
            android:id="@+id/rb_opt_both"
            android:layout_width="wrap_content"
            android:layout_height="40dip"
            android:text="Both" />
    </RadioGroup>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <DatePicker
                android:id="@+id/ui_view_date_picker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TimePicker
                android:id="@+id/ui_view_pickertime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/bt_ui_view_start_alarm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="定时闹钟" />

            <TextView
                android:id="@+id/tv_ui_view_date_picker_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>