<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Enter content of column 1" />

    <EditText
        android:id="@+id/et_db_content1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Enter content of column 2" />

    <EditText
        android:id="@+id/et_db_content2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/bt_db_add"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Add" />

    <Button
        android:id="@+id/bt_db_deleteall"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Delete All" />

    <ListView
        android:id="@+id/lv_contentlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView>

</LinearLayout>