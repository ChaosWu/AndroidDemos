<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_bitmap_pixels_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/bt_bitmap_pixels"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="传递数据跳转" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_bitmap_pixels_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/iv_bitmap_pixels_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/iv_bitmap_pixels_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/iv_bitmap_pixels_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>