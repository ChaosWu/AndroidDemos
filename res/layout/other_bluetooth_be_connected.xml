<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/bluetooth_be_connected_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/bluetooth_be_connected_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="28sp" />

    <LinearLayout
        android:id="@+id/bluetooth_be_connected_inputpane"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone" >

        <EditText
            android:id="@+id/bluetooth_be_connected_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/bluetooth_be_connected_send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sent" />
    </LinearLayout>

</LinearLayout>