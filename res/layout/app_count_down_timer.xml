<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/app_count_down_timer_start"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Start CountDownTimer" />

    <TextView
        android:id="@+id/app_count_down_timer_mystate"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/app_count_down_timer_mycounter"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <cn.android.demo.apis.ui.widget.SpotView
        android:id="@+id/app_count_down_timer_myspotview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

</LinearLayout>