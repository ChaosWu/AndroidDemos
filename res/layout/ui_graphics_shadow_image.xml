<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/bt_load_shadow_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="读取图片" />

    <TextView
        android:id="@+id/tv_load_shadow_path"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="图片路径" />
    <TextView
        android:id="@+id/tv_load_ontouch_image_xy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="。。。。" />

    <Button
        android:id="@+id/bt_load_shadow_processing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="阴影" />

    <ImageView
        android:id="@+id/iv_load_shadow_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>