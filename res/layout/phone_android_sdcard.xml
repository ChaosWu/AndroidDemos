<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_download_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/bt_select_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="选择图片" />

    <Button
        android:id="@+id/bt_download_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="下载图片" />

    <Button
        android:id="@+id/bt_load_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="读取图片" />

    <Button
        android:id="@+id/bt_pick"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="- PICK a file -" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/tv_target_uri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="=====" />

        <ImageView
            android:id="@+id/iv_load_dowload_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_target_uri" />
    </RelativeLayout>

</LinearLayout>