        android:text="按钮" />

    <ImageView
        android:id="@+id/iv_web_head"
        android:layout_width="200dip"
        android:layout_height="200dip" />

    <ImageView
        android:id="@+id/iv_dowload_head"
        android:layout_width="200dip"
        android:layout_height="200dip" />

</LinearLayout>