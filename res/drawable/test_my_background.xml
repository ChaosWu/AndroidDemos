<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <gradient android:angle="180" android:endColor="#FF00FF" android:startColor="#FF0000" />

            <stroke android:width="3dip" android:color="@android:color/background_dark" />

            <corners android:radius="3dip" />

            <padding android:bottom="10dip" android:left="50dip" android:right="50dip" android:top="10dip" />
        </shape></item>
    <item android:state_focused="true"><shape>
            <gradient android:angle="180" android:endColor="@android:color/background_dark" android:startColor="@android:color/background_light" />

            <stroke android:width="3dip" android:color="@android:color/background_dark" />

            <corners android:radius="3dip" />

            <padding android:bottom="10dip" android:left="50dip" android:right="50dip" android:top="10dip" />
        </shape></item>
    <item><shape>
            <gradient android:angle="180" android:endColor="@android:color/background_dark" android:startColor="@android:color/background_light" />

            <stroke android:width="3dip" android:color="@android:color/background_dark" />

            <corners android:radius="3dip" />

            <padding android:bottom="10dip" android:left="50dip" android:right="50dip" android:top="10dip" />
        </shape></item>

</selector>